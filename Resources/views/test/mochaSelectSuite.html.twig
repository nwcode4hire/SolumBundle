{% extends 'LinkShareSolumBundle::layout.html.twig' %}

{% block javascripts %}
  {{ parent() }}
  <script type="text/javascript" src="{{ asset('bundles/linksharesolum/js/test/assets/routes.js') }}"></script>
  <script type="text/javascript" src="{{ asset('bundles/linksharesolum/js/test/models/mochaSelectSuite.js') }}"></script>
  <script type="text/javascript" src="{{ asset('bundles/linksharesolum/js/solum/lib/ko-binding-folderTree.js') }}"></script>
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('bundles/linksharesolum/css/main.css') }}" />
{% endblock %}

{% block pagetitle %}
  <div class="row">
    <h1>Mocha JS Unit Test Coverage</h1>
  </div>
{% endblock %}

{% block body %}
  <div class="row">
    <div>
      <h3>Not Seeing Your JS Suite's Coverage Report? <small>Did your run the command:</small></h3>
    </div>
    <div>
      <code>
  $> php app/console solum:test:mocha:coverage
      </code>
    </div>
  </div>
  <div class="row">
    <div><h3>Pick a Coverage Report to View</h3></div>
    <div id="loading_symbol" style="display: none" data-bind="visible: ajaxManager.isLoading()">
      <div class="centered" style="width:50px; margin:0px auto;">
        <img height="50px" width="50px" src="{{ asset('bundles/linksharesolum/images/demo/loading.gif') }}"/>
      </div>
    </div>
    <div data-bind="folderTree: {data: filetree.hierarchy, onLeaf: onLeaf}"></div>
  </div>

  <script type="text/javascript">
    $(function() {
      model = solum.getModel('mocha', 'selectSuite');
      ko.applyBindings(model);
      model.getSuiteList();
    });
  </script>
{% endblock %}